<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonata.datagrid.filter.factory.class">Sonata\DatagridBundle\Filter\FilterFactory</parameter>
    </parameters>

    <services>
        <service id="sonata.datagrid.filter.factory" class="%sonata.datagrid.filter.factory.class%">
            <argument type="collection" />
        </service>

        <service id="sonata.datagrid.filter.elastica.missing" class="Sonata\DatagridBundle\Filter\Elastica\Missing">
            <tag name="sonata.datagrid.filter.type" alias="missing" engine="elastica" />
        </service>

        <service id="sonata.datagrid.filter.elastica.term" class="Sonata\DatagridBundle\Filter\Elastica\Term">
            <tag name="sonata.datagrid.filter.type" alias="term" engine="elastica" />
        </service>

        <service id="sonata.datagrid.filter.elastica.max" class="Sonata\DatagridBundle\Filter\Elastica\Max">
            <tag name="sonata.datagrid.filter.type" alias="max" engine="elastica" />
        </service>
    </services>
</container>
